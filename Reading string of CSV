//Program that prompts the user to enter a string of comma-separated values (CSV) representing student grades (e.g. "Alice,90;Bob,85;Charlie,80").

#include <stdio.h>
#include <string.h>

int main() 
{
    char input[100];
    printf("Enter string: ");
    scanf("%[^\n]%*c", input);

    char name[20];
    int grade;
    int input_len = strlen(input);
    int i = 0;
    while (i < input_len) 
    {
        // extract name
        int j = 0;
        while (input[i] != ',') 
        {
            name[j++] = input[i++];
        }
        name[j] = '\0'; 
        i++; 

        // extract grade
        j = 0;
        while (input[i] != ';' && input[i] != '\0') 
        {
            j = j * 10 + (input[i] - '0');
            i++;
        }
        grade = j;
        i++; 

        printf("%s: %d\n", name, grade);
    }
}
